# Stage 1: Build
FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod ./
COPY go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /main ./cmd/heimdall-data

# Stage 2: Run
FROM alpine:latest

WORKDIR /root/

ARG DATA_PORT=50051
ARG OBSERVABILITY_PORT=9090
ENV HEIMDALL_SERVER_DATA_PORT=${DATA_PORT}
ENV HEIMDALL_OBSERVABILITY_PORT=${OBSERVABILITY_PORT}

COPY --from=builder /main .

EXPOSE ${HEIMDALL_SERVER_DATA_PORT}
EXPOSE ${HEIMDALL_OBSERVABILITY_PORT}

CMD ["./main"]
