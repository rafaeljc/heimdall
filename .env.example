
# Heimdall Development .env Example
# Copy to .env and adjust as needed

# --- Minimum Required ---
HEIMDALL_DB_HOST=localhost
HEIMDALL_DB_PORT=5432
HEIMDALL_DB_NAME=heimdall
HEIMDALL_DB_USER=heimdall_user
HEIMDALL_DB_PASSWORD=heimdall_password

HEIMDALL_REDIS_HOST=localhost
HEIMDALL_REDIS_PORT=6379
HEIMDALL_REDIS_PASSWORD=redis_password

HEIMDALL_SERVER_CONTROL_PORT=8080
HEIMDALL_SERVER_DATA_PORT=50051

# You can run one of the following commands to get appropriate hash values:
#   task sec:genkeys
#       to generate random keys and hashes
#   task sec:hash
#       to generate hash from a key
HEIMDALL_SERVER_CONTROL_API_KEY_HASH=your_control_api_key_hash


# --- Optional Settings (with defaults) ---
